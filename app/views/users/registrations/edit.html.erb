
<div class='col-lg-6 mx-lg-auto'>
  <div class='card shadow' style="width: 30rem;">
    <div class='card-header'>
      <h2 class='card-title text-center'>Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div class='card-body'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),data: { turbo: false }, html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, :readonly => true,autofocus: true, autocomplete: "email",class: "form-control form-control-lg" %>
  </div>
  <div class="form-group mb-3">
          <%= f.label :username %><br/>
          <%= f.text_field :username,class: "form-control form-control-lg" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :birth_date %><br/>
          <%= f.date_field :birth_date,max: Date.today,class: "form-control form-control-lg" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :address %><br/>
          <%= f.text_field :address,class: "form-control form-control-lg" %>
        </div>
        <div class="form-group mb-3">
          
          <%= f.label :contact%>
          <em>(enter 10 digit)</em>
          <%= f.text_field :contact,class: "form-control form-control-lg" %>
        </div>
        
        <div class="form-group mb-3">
            <%= f.label :image %><br/>
            <%= f.file_field :image, class: "form-control form-control-lg" %>
          </div>
      

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control form-control-lg"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control form-control-lg" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control form-control-lg" %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Update",class:'btn btn-lg btn-primary' %>
  </div>
<% end %>

